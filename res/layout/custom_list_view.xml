<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@drawable/list_selector_background"
    android:id="@+id/ll_listview_item"
    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:paddingBottom="@dimen/custom_list_view_imageview_padding_top_bottom"
        android:paddingTop="@dimen/custom_list_view_imageview_padding_top_bottom"
        android:paddingLeft="@dimen/custom_list_view_imageview_padding_top_bottom"
        android:paddingRight="@dimen/custom_list_view_imageview_padding_top_bottom"
        />

</LinearLayout>